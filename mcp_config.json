{
  "mcpServers": {
    "version-compare-tool": {
      "command": "python3",
      "args": ["src/mcp_server.py"],
      "env": {
        "GITLAB_URL": "https://gitlab.example.com",
        "GITLAB_TOKEN": "your_token_here",
        "GITLAB_PROJECT_ID": "your_project_id_here"
      }
    },
    "version-compare-tool-sse": {
      "command": "python3",
      "args": ["src/mcp_sse_server.py"],
      "env": {
        "GITLAB_URL": "https://gitlab.example.com",
        "GITLAB_TOKEN": "your_token_here", 
        "GITLAB_PROJECT_ID": "your_project_id_here",
        "MCP_PORT": "3000"
      }
    }
  }
} 